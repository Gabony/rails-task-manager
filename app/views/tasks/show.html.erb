<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <input type='checkbox' id='scales' name='scales' checked><p>This task is completed</p>
<% else %>
  <input type='checkbox' id='scales' name='scales'><p>This task is not completed</p>
<% end %>
<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit this task", edit_path %>
